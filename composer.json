{
  "name": "leinonen/yii2-algolia",
  "description": "Algolia bridge for Yii2",
  "type": "yii2-extension",
  "keywords": [
    "yii2",
    "algolia",
    "search"
  ],
  "license": "MIT",
  "authors": [
    {
      "name": "Juuso Leinonen",
      "email": "leinonen.juuso@gmail.com"
    }
  ],
  "require": {
    "yiisoft/yii2": "*",
    "algolia/algoliasearch-client-php": "^2.0",
    "guzzlehttp/guzzle": "^6.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^8.5",
    "mockery/mockery": "^1.6.7",
    "yiisoft/yii2-dev": "^2.0"
  },
  "autoload": {
    "psr-4": {
      "leinonen\\Yii2Algolia\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "leinonen\\Yii2Algolia\\Tests\\": "tests/"
    }
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    }
  ],
  "scripts": {
    "post-install-cmd": [
      "cp -n phpunit.xml.dist phpunit.xml"
    ]
  },
  "config": {
    "allow-plugins": {
      "yiisoft/yii2-composer": true
    }
  }
}
